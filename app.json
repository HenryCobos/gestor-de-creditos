      "bundleIdentifier": "com.gestordecreditos.app",
      "buildNumber": "100",
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Esta app no requiere acceso a la cámara",
        "NSPhotoLibraryUsageDescription": "Esta app no requiere acceso a la galería",
        "NSLocationUsageDescription": "Esta app no requiere acceso a la ubicación",
        "NSMicrophoneUsageDescription": "Esta app no requiere acceso al micrófono",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.gestordecreditos.app",
      "versionCode": 100,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2196F3"
      },
      "permissions": []
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#2196F3",
          "sounds": [
            "./assets/notification-sound.wav"
          ]
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "iosAppId": "ca-app-pub-4349408589058649~7588427896"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "fcc79bd1-8773-45fb-a4f3-844d1bdd2713"
