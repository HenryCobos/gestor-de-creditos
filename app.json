{
  "expo": {
    "name": "Gestor de Créditos",
    "slug": "gestor-de-creditos",
    "version": "1.1.0",
    "orientation": "portrait",
    "platforms": [
      "ios"
    ],
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "description": "Aplicación completa para gestionar préstamos, clientes y cuotas. Ideal para prestamistas, microfinanzas y gestión de créditos personales.",
